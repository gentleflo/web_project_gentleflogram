<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.gentleflo.gentleflogram.user.dao.UserDAO">
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO 
 			`user`
 		(
 			`email`
 			, `loginId`
 			, `name`
 			, `password`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES (
 			#{email}
 			, #{loginId}
 			, #{name}
 			, #{password}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<select id="selectById" parameterType="String" resultType="int">
 		SELECT 
 			count(*)
 		FROM 
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 	
 	<select id="selectByloginIdPassword" parameterType="map" resultType="com.gentleflo.gentleflogram.user.model.User">
 		SELECT 
 			`id`
 			, `email`
 			, `loginId`
 			, `name`
 			, `userImagePath`
 			, `password`
 			, `createdAt`
 			, `updatedAt`
 		FROM 
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 			AND `password` = #{password}
 	</select>
 </mapper>
