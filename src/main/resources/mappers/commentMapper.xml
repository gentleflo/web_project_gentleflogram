<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.gentleflo.gentleflogram.comment.dao.CommentDAO">
 	<insert id="insertComment" parameterType="map">
 		INSERT INTO
 			`comment`
 		(
 			`userId`
 			, `postId`
 			, `loginId`
 			, `commentContent`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES (
 			#{userId }
 			, #{postId }
 			, #{loginId }
 			, #{commentContent }
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<select id="selectCommentListByPostId" resultType="com.gentleflo.gentleflogram.comment.model.Comment"
 	parameterType="int">
 		SELECT 
 			`id`
 			, `userId`
 			, `postId`
 			, `loginId`
 			, `commentContent`
 			, `createdAt`
 			, `updatedAt`
 		FROM 
 			`comment`
 		WHERE 
 			`postId` = #{postId }
 		ORDER BY `id` DESC
 	</select>

 </mapper>