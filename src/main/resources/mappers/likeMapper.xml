<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.gentleflo.gentleflogram.like.dao.LikeDAO" >
 	<insert id="insertLike" parameterType="map">
 		INSERT INTO
 			`like`
 		(
 			`userId`
 			, `postId`
 			, `createdAt`
 		) VALUES (
 			#{userId }
 			, #{postId }
 			, now()
 		)
 	</insert>
 	<delete id="deleteLikeByUserIdPostId">
 		DELETE FROM
 			`like`
 		WHERE 
 			`userId` = #{userId }
 			AND `postId` = #{postId }
 	</delete>
 	
 	<select id="selectLikeListByUserIdPostId" resultType="int" parameterType="map">
 		SELECT 
 			count(*)
 		FROM 
 			`like`
 		WHERE 
 			`userId` = #{userId }
 			AND `postId` = #{postId }
 	</select>
 	
 	<select id="selectLikeCountByPostId" resultType="int" parameterType="int">
 		SELECT
 			count(*)
 		FROM 
 			`like`
 		WHERE 
 			`postId` = #{postId }
 	</select>
 	
 	<delete id="deleteLikeByPostId" parameterType="int">
 		DELETE FROM
 			`like`
 		WHERE 
 			`postId` = #{postId }
 	</delete>
 </mapper>