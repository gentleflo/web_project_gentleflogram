<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.gentleflo.gentleflogram.post.dao.PostDAO">
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO
 			`post`
 		(
 			`userId`
 			, `loginId`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES (
 			#{userId}
 			, #{userLoginId}
 			, #{content}
 			, #{imagePath}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<select id="selectTimeLineList" resultType="com.gentleflo.gentleflogram.post.model.Post">
 		SELECT 
 			`id`
 			, `userId`
 			, `loginId`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM 
 			`post`
 		ORDER BY `id` DESC
 	</select>
 	
 	<select id="selectPost" resultType="com.gentleflo.gentleflogram.post.model.Post" parameterType="map">
 		SELECT 
 			`id`
 			, `userId`
 			, `loginId`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM 
 			`post`
 		WHERE
 			`postId` = #{postId }
 			AND `userId` = #{userId }
 	</select>
 	
 	<delete id="deletePostByPostIdUserId" parameterType="map">
 		DELETE FROM
 			`post`
 		WHERE
 			`postId` = #{postId }
 			AND `userId` = #{userId }
 	</delete>
 </mapper>